<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/txtvSignIn"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight=".50"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:textSize="30dp"
                    android:background="@drawable/back"

                    android:text="Sign In"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtvSignUp"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight=".50"
                    android:text="Sign Up"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:background="@drawable/sign"

                    android:layout_alignParentRight="true"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/text_size"
                    tools:ignore="RtlCompat"
                    android:textStyle="bold"
                    android:text="First Name"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:layout_gravity="end"
                    android:background="@drawable/edit_text_background"

                    android:id="@+id/edtFirstName"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/text_size"
                    tools:ignore="RtlCompat"
                    android:textStyle="bold"
                    android:text="Last Name"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:layout_gravity="end"
                    android:background="@drawable/edit_text_background"

                    android:id="@+id/edtLastName"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/text_size"
                    tools:ignore="RtlCompat"
                    android:text="Phone"

                    android:textStyle="bold"/>
                <EditText
                    android:background="@drawable/edit_text_background"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:layout_gravity="end"
                    android:id="@+id/edtPhone"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/text_size"
                    tools:ignore="RtlCompat"
                    android:textStyle="bold"
                    android:text="Address"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:layout_gravity="end"
                    android:background="@drawable/edit_text_background"
                    android:id="@+id/edtAddress"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/text_size"
                    tools:ignore="RtlCompat"
                    android:textStyle="bold"

                    android:text="Username"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_gravity="end"
                    android:background="@drawable/edit_text_background"
                    android:id="@+id/edtUsername"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/text_size"
                    tools:ignore="RtlCompat"
                    android:textStyle="bold"
                    android:text="Password"

                    />

                <EditText

                    android:inputType="textPassword"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_gravity="end"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edit_text_background"
                    android:id="@+id/edtPassword"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="Birthdate"
                android:textStyle="bold"
                android:textSize="@dimen/text_size"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/edtBirthdate"
                    android:inputType="date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="5"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/edit_text_background"
                    />

                <Button
                    android:id="@+id/btnSelect"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:padding="7dp"
                    android:textAlignment="center"
                    android:text="SELECT"

                    android:textSize="@dimen/text_size" />

            </LinearLayout>



            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Who are you?"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/radioGroupUserType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <RadioButton
                        android:id="@+id/radShop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shop" />
                    <RadioButton
                        android:id="@+id/radShipper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shipper" />
                    <RadioButton
                        android:id="@+id/radCustomer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/customer" />
                </RadioGroup>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:id="@+id/btnSignUp"
                android:textSize="30dp"
                android:background="@drawable/sign"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login here"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="17dp"

                android:id="@+id/txtvLogin"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>